<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="auth_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">56dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="backgroundTint">#26B7B6BB</item>
        <item name="android:textColor">#664DB1</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="violet_button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:radius">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:background">#664DB1</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_profile_tv">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.01</item>
